<% @posts.each do |post| %>
<div class="cntnr">
  <% if post.user_id == @current_user.id %>
  <%= link_to "/posts/#{post.id}/edit" do%>
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4">
            <%= post.user.user_id %>
          </p>
          <p class="subtitle is-6">
            <%= post.user.email %>
          </p>
        </div>
      </div>

      <div class="content">
        <%= post.content %>
        <!--
        <a>@bulmaio</a>.
        <a href="#">#css</a>
        <a href="#">#responsive</a> 
        -->
        <br>
        <time>
          <%= post.updated_at %></time>
      </div>
    </div>
  </div>
  <% end %>
  <% else %>
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4">
            <%= post.user.user_id %>
          </p>
          <p class="subtitle is-6">
            <%= post.user.email %>
          </p>
        </div>
      </div>

      <div class="content">
        <%= post.content %>
        <!--
        <a>@bulmaio</a>.
        <a href="#">#css</a>
        <a href="#">#responsive</a> 
        -->
        <br>
        <time>
          <%= post.updated_at %></time>
      </div>
    </div>
  </div>
  <% end %>
</div>
<% end %>